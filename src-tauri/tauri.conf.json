{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stalker",
  "version": "0.1.0",
  "identifier": "com.ruut.stalker",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "S.T.A.L.K.E.R Global War",
        "minWidth": 1200,
        "width": 1200,
        "minHeight": 730,
        "height": 730,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:webview:allow-internal-toggle-devtools"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": [],
    "icon": [
      "icons/icon.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}