{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Global War Launcher",
  "version": "0.1.0",
  "identifier": "com.ruut.stalker",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlGMTg0NkEzMkU1OTcxRjkKUldUNWNWa3VvMFlZbjlZTDZqT3Zkb2tuZlVHaS9ETHphTzBMbFJFaWExYWlHRkM3S0pLQXFyQUgK",
      "endpoints": [
        "https://gitlab.com/great-war/launcher-new/-/raw/master/updater.json"
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "S.T.A.L.K.E.R Global War",
        "minWidth": 1200,
        "width": 1200,
        "minHeight": 730,
        "height": 730,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:webview:allow-internal-toggle-devtools",
            "core:window:allow-toggle-maximize",
            "core:window:allow-is-maximized",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:event:allow-listen",
            "core:app:allow-version",
            "shell:allow-open",
            "shell:default",
            "core:app:default",
            "core:event:default",
            "core:window:default",
            "core:path:allow-join",
            "core:path:default",
            "dialog:allow-open",
            "dialog:default",
            "window-state:default",
            "window-state:allow-restore-state",
            "window-state:allow-save-window-state",
            "clipboard-manager:allow-write-image",
            "clipboard-manager:allow-read-image",
            "clipboard-manager:allow-read-text",
            "clipboard-manager:allow-write-text"
          ]
        }
      ]
    }
  },
  "bundle": {
    "publisher": "Global War Developers",
    "shortDescription": "Global War Launcher",
    "copyright": "Copyright (C) 2025 Global War Developers, GSC Game World",
    "category": "Game",
    "homepage": "https://vk.com/wargreat",
    "active": false,
    "targets": [],
    "icon": [
      "icons/icon.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "resources": {
      "../bin/win/7za.dll": "7za.dll",
      "../bin/win/7za.exe": "7za.exe",
      "../bin/win/7zxa.dll": "7zxa.dll",
      "../bin/linux/7zzs": "7zzs"
    }
  }
}